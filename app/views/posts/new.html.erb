<h1>New</h1>
<%= form_for @post do |f| %>
  <div>
    <%= f.label :title, 'Title' %><br>
    <%= f.text_field :title, placeholder: "Title" %>
  </div>
  <br>
  <div>
    <%= f.label :post %><br>
    <%= f.text_area :post, placeholder: "Write your opinions here" %>
  </div>
  <%= f.submit("Submit the Post")%>


<% end %>


  